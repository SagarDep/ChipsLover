<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ChipView">
        <attr name="chip_text" format="string" />
        <attr name="chip_elevation" format="dimension"/>
        <attr name="chipCloseable" format="boolean"/>
        <attr name="chipSelectable" format="boolean" />
        <attr name="chipFrontIconColor" format="color"/>
        <attr name="chipEndIconColor" format="color"/>
        <attr name="chip_backgroundColor" format="color" />
        <attr name="chip_selectedBackgroundColor" format="color" />
        <attr name="chipTextColor" format="color" />
        <attr name="chipEndIcon" format="reference"/>
        <attr name="chipFrontIcon" format="reference"/>
        <attr name="chip_selectedTextColor" format="color" />
        <attr name="chip_selectedEndColor" format="color" />
        <attr name="chip_selectedFrontColor" format="color"/>
        <attr name="chipTextStyle" format="reference"/>
        <attr name="chipDefaultAnimation" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="ChipsLayout">
        <attr name="chip_text" />
        <attr name="chipCloseable"/>
        <attr name="chip_elevation"/>
        <attr name="chipSelectable"/>
        <attr name="chipFrontIconColor"/>
        <attr name="chipEndIconColor" />
        <attr name="chip_backgroundColor"/>
        <attr name="chip_selectedBackgroundColor" />
        <attr name="chipTextColor" />
        <attr name="chipEndIcon" />
        <attr name="chipFrontIcon"/>
        <attr name="chip_selectedTextColor" />
        <attr name="chip_selectedEndColor" />
        <attr name="chip_selectedFrontColor"/>
        <attr name="chipTextStyle"/>
        <attr name="chipDefaultAnimation"/>

        <attr name="remove_anim_enabled" format="boolean"/>
        <attr name="remove_chips_touch" format="boolean"/>
        <attr name="chips_array" format="reference"/>
        <attr name="remove_anim" format="reference"/>
        <attr name="chip_layout_horizontal_margin" format="dimension"/>
        <attr name="chip_layout_vertical_margin" format="dimension"/>
        <attr name="chips_style" format="reference"/>
    </declare-styleable>
</resources>